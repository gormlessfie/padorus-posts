<div class='container box'>
  <div class='content'>
    <h1 class='title is-3'><%= @post.title %></h1>
    <h2 class='subtitle is-5'>by: <%= @post.user.username %></h2>
    <p><%= @post.body %></p>
  </div>

  <% if current_user.id == @post.user.id %>
    <div class='buttons'>
      <%= link_to 'Edit post', edit_user_post_path(@post), class:'button is-link' %>
    </div>
  <% end %>
</div>

